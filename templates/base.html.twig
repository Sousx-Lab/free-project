<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# <meta name="turbo-cache-control" content="no-cache"> #}
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
        <link rel="manifest" href="/favicon/site.webmanifest">
        <title>{% block title %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="/build/app.css">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
        <script src="/build/app.js" defer></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}  
    </head>
    <body>
        {% block menu %}
        <nav class="header">
            <a href="{{path ('homepage_route')}}" class="header__logo"> 
                    <img id="logo" src="/img/logo.svg" alt="logo">
                </a>
            <ul>
              <li id="real">
                <a href="{{path ('homepage_route') ~ "#projects"}}">r√©alisations</a>
              </li>
               <li id="contact">
                <a href="{{path ('contact_route')}}">me contacter</a>
               </li>
            </ul>
            </nav>
        {% endblock %}
        {% for label, messages in app.flashes %}
			{% for message in messages %}
			    <div class="flashes" style="display: none;" data-error-type="{{ label }}">{{ message }}</div>
			{% endfor %}
		{% endfor %}

        {% block body %}{% endblock %}
            
     {# {% include "footer.html.twig" %} #}
     {% block footer %}
        {% include "footer.html.twig" %}
     {% endblock %}
    </body>
</html>
